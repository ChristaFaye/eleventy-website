!!! XML
!!!
%html
  %head
    %meta{"http-equiv": "X-UA-Compatible", content: "ie-edge"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"}
    %link{rel: "stylesheet", href: "../css/style.css"}
    %script{src: "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin: "anonymous"}
    %title #{ title }
  %body
    %header
      %img{id: "logo", src: "../img/nameLogo.png"}
        %nav{class: "header navbar navbar-expand-lg"}
          %li
            %a{href: "/"} Home
          %li
            %a{href: "/about"} About Me
          %li
            %a{href: "/portfolio"} Portfolio
          %li
            %a{href: "/contact"} Contact
    %main
      #carouselExampleIndicators.carousel.slide{"data-bs-ride": "carousel"}
        .carousel-indicators
          %button.active{"aria-current": "true", "aria-label": "Slide 1", "data-bs-slide-to": "0", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %button{"aria-label": "Slide 2", "data-bs-slide-to": "1", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %button{"aria-label": "Slide 3", "data-bs-slide-to": "2", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %button{"aria-label": "Slide 4", "data-bs-slide-to": "3", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %button{"aria-label": "Slide 5", "data-bs-slide-to": "4", "data-bs-target": "#carouselExampleIndicators", type: "button"}
        .carousel-inner
          .carousel-item.active
            %img.d-block.w-100{alt: "...", src: "../img/elite.png"}
          .carousel-item
            %img.d-block.w-100{alt: "...", src: "../img/coding-challenge.jpg"}
          .carousel-item
            %img.d-block.w-50.rounded.mx-auto{alt: "...", src: "../img/animation.gif"}
          .carousel-item
            %img.d-block.w-75.mx-auto{alt: "...", src: "../img/ui-kit.svg"}
          .carousel-item
            %img.d-block.w-75.mx-auto{alt: "...", src: "../img/banner.png"}
        %button.carousel-control-prev{"data-bs-slide": "prev", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %span.carousel-control-prev-icon{"aria-hidden": "true"}
          %span.visually-hidden Previous
        %button.carousel-control-next{"data-bs-slide": "next", "data-bs-target": "#carouselExampleIndicators", type: "button"}
          %span.carousel-control-next-icon{"aria-hidden": "true"}
          %span.visually-hidden Next